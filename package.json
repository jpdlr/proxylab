{
  "name": "proxylab",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "node scripts/dev.mjs",
    "dev:web": "cd web && vite",
    "dev:server": "tsx watch server/src/index.ts",
    "build": "npm run build:web && npm run build:server",
    "build:web": "cd web && vite build --outDir ../dist/web",
    "build:server": "cd server && tsc -p tsconfig.json",
    "test": "npm run test:web && npm run test:server",
    "test:web": "cd web && vitest run",
    "test:server": "cd server && vitest --config vitest.config.ts run",
    "lint": "eslint ."
  },
  "dependencies": {
    "@fastify/static": "^6.12.0",
    "fastify": "^4.28.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/react": "^15.0.6",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20.11.30",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.2.1",
    "jsdom": "^24.0.0",
    "tsx": "^4.7.1",
    "typescript": "^5.4.5",
    "vite": "^5.1.6",
    "vitest": "^1.5.2"
  }
}
